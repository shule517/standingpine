<% if controller_name == 'artists' %>
  <ul class="artist-name__items">
    <% if controller.action_name == 'show' %>
      <li class="artist-name__item"><%= @artist.name_en %></li>
      <li class="artist-name__item is_font-size-text"><%= @artist.name_ja %></li>
    <% end %>
  </ul>
<% elsif controller.action_name == 'index' %>
  <ul class="year-select__items">
    <% @select_year.each do |p| %>
      <li class="year-select__item">
        <%= link_to p, articles_path(year: p) %>
      </li>
    <% end %>
    <li class="year-select__item">
      <%= link_to "ALL", articles_path  %>
    </li>
  </ul>
<% elsif controller_name == 'articles' && controller.action_name == 'show' %>
  <ul class="year-select__items is-show-wrapper">
    <li class="year-select__item is-border-none">
      <% if @prev_article == false %>
          <div class="arrow-left is-last"></div>
      <% else %>
        <%= link_to article_path(@prev_article) do %>
          <div class="arrow-left"></div>
        <% end %>
      <% end %>
    </li>
    <li class="year-select__item is-border-none">
      <% if @next_article == false %>
          <div class="arrow-right is-last"></div>
      <% else %>
        <%= link_to article_path(@next_article) do %>
          <div class="arrow-right"></div>
        <% end %>
      <% end %>
    </li>
    <li class="year-select__item is-show">
      <%= link_to articles_path do %>
        <%= @article.published_at.strftime("%Y.%m") %>
      <% end %>
    </li>
  </ul>
<% else %>
  <ul class="year-select__items">
    <li class="year-select__item is_past">
    <%  if @exhibition_first == params[:id].to_i %>
      CURRENT EXHIBITION
    <% else %>
      PAST EXHIBITION
    <% end %>
    </li>
  </ul>
<% end %>
